<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syedfaizan.rescueapp.Rescue_Numbers_Set">

    <EditText
        android:id="@+id/contact1"
        android:focusable="false"
        android:layout_width="222dp"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/contact2"
        android:layout_alignRight="@+id/contact2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="@string/textcontactselect"
        android:inputType="textPersonName"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/contact2"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_alignLeft="@+id/contact3"
        android:layout_alignStart="@+id/contact3"
        android:layout_below="@+id/contact1"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/textcontactselect"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/contact3"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_below="@+id/contact2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/textcontactselect"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="200px"
        android:layout_height="150px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact3"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="67dp"
        android:onClick="confirm"
        android:text="Confirm" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/emercontacts"
        android:textSize="30sp" />
</RelativeLayout>
